<!DOCTYPE html>
<html>
{{>head}}

<body data-target=".navbar-fixed-top" data-spy="scroll">

{{>navbar}}

<div id='main' class="container">

    <div id="buffer" style="height:50px;"></div>

    <div class="row">
        <div class="col-xs-12">
            <p>{{status}}</p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">

            <form class='form-inline' action="/admin/login" method="POST">
                <div class="form-group">
                    <input type="text" class='form-control' placeholder='Username' value="" name='username' id="username"/>
                </div>

                <div class="form-group">
                    <input type="password" class="form-control" value="" placeholder="Password" name='password' id="password"/>
                </div>
                <input class='btn btn-primary' type="submit" value="Login"/>
            </form>

        </div>
    </div>

</div>

<script>
    $("#username").focus();
</script>


</body>
</html>